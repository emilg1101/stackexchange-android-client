<resources>

    <style name="StackExchangeTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">@bool/windowLightStatusBar</item>
        <item name="colorControlNormal">@color/colorAccent</item>
    </style>

    <style name="ToolbarTheme">
        <item name="android:titleTextAppearance">@style/Text.Toolbar</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/alegreya_sans_sc_extrabold</item>
    </style>

    <style name="SortChips" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_state_list_background</item>
        <!--<item name="android:titleTextAppearance">@color/defaultTextColor</item>-->
        <item name="android:textColor">@color/defaultTextColor</item>
    </style>

    <style name="Text"></style>

    <style name="Text.Default">
        <item name="android:textColor">@color/defaultTextColor</item>
    </style>

    <style name="Text.ToolbarSpinner">
        <item name="android:textColor">@color/defaultTextColor</item>
    </style>

    <style name="Text.Toolbar">
        <item name="android:textColor">@color/defaultTextColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/alegreya_sans_sc_extrabold</item>
    </style>

</resources>
