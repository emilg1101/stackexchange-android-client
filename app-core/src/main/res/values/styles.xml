<resources>

    <style name="StackExchangeTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorControlNormal">@color/colorAccent</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:fontFamily">@font/alegreya_sans_sc_extrabold</item>
    </style>

    <style name="SortChips" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_state_list_background</item>
        <item name="android:textColor">#232F34</item>
    </style>

</resources>
