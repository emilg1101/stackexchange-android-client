<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@+id/questionsSearch"
    android:id="@+id/questions_flow">

    <fragment
        android:id="@+id/questionsSearch"
        android:name="com.github.emilg1101.stackexchangeapp.questionssearch.ui.QuestionsSearchFragment"
        tools:layout="@layout/fragment_questions_search">
        <action
            android:id="@+id/action_questionsSearch_to_questionDetails"
            app:destination="@id/questionDetails" />
    </fragment>

    <fragment
        android:id="@+id/questionDetails"
        android:name="com.github.emilg1101.stackexcahnge.questiondetails.ui.QuestionDetailsFragment"
        tools:layout="@layout/fragment_question_details" >
        <action
            android:id="@+id/action_questionDetails_to_commentsFragment"
            app:destination="@id/commentsFragment" />
    </fragment>
    <fragment
        android:id="@+id/commentsFragment"
        android:name="com.github.emilg1101.stackexchangeapp.comments.ui.CommentsFragment"
        android:label="Comments"
        tools:layout="@layout/fragment_comments"/>
</navigation>